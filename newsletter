    <script>
        // Page Navigation
        function showPage(pageName) {
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => {
                page.classList.remove('active');
            });
            document.getElementById(pageName).classList.add('active');
            window.scrollTo(0, 0);
        }

        // Generate Dashboard Date
        function updateDashboardDate() {
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const today = new Date().toLocaleDateString('en-US', options);
            document.getElementById('dashboardDate').textContent = today;
        }

        // Generate News Content
        function generateNews() {
            const newsItems = [
                {
                    time: '9:15 AM EST',
                    title: 'Federal Reserve Signals Possible Rate Adjustment',
                    content: 'Fed officials indicated in morning statements that monetary policy adjustments may be considered at the next FOMC meeting, citing recent inflation data trends. Treasury yields responded with moderate volatility.'
                },
                {
                    time: '10:30 AM EST',
                    title: 'Tech Sector Shows Strong Pre-Market Activity',
                    content: 'Major technology stocks displaying bullish momentum in pre-market trading. NASDAQ futures up 0.8% as semiconductor stocks rally on positive earnings guidance from key industry players.'
                },
                {
                    time: '11:45 AM EST',
                    title: 'Energy Sector Reacts to Inventory Data',
                    content: 'Crude oil futures climb following unexpected inventory drawdown. Energy stocks gaining momentum with XLE up 1.2%. Watch for potential breakout above key resistance levels.'
                },
                {
                    time: '1:20 PM EST',
                    title: 'Financial Sector Mixed on Banking Earnings',
                    content: 'Regional banks show divergent performance following quarterly earnings releases. Trading volume elevated as investors reassess positions ahead of additional reports expected this week.'
                }
            ];

            const container = document.getElementById('newsContainer');
            container.innerHTML = newsItems.map(item => `
                <div class="news-item">
                    <div class="news-time">${item.time}</div>
                    <div class="news-title">${item.title}</div>
                    <div class="news-content">${item.content}</div>
                </div>
            `).join('');
        }

        // Generate Forecast Content
        function generateForecast() {
            const forecasts = `
                <div class="forecast-card">
                    <div class="forecast-title">Market Outlook</div>
                    <div class="forecast-metric">
                        <div class="metric-label">Trend Direction</div>
                        <div class="metric-value">Bullish ‚ÜóÔ∏è</div>
                    </div>
                    <div class="forecast-metric">
                        <div class="metric-label">Volatility Index (VIX)</div>
                        <div class="metric-value">14.2 (Low)</div>
                    </div>
                    <div class="forecast-metric">
                        <div class="metric-label">Market Sentiment</div>
                        <div class="metric-value">73% Positive</div>
                    </div>
                </div>

                <div class="forecast-card" style="background: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%);">
                    <div class="forecast-title">Key Levels to Watch</div>
                    <div class="forecast-metric">
                        <div class="metric-label">S&P 500 Resistance</div>
                        <div class="metric-value">5,875</div>
                    </div>
                    <div class="forecast-metric">
                        <div class="metric-label">S&P 500 Support</div>
                        <div class="metric-value">5,810</div>
                    </div>
                </div>
            `;

            document.getElementById('forecastContainer').innerHTML = forecasts;
        }

        // Generate Technical Analysis
        function generateTechnicalAnalysis() {
            const analysis = `
                <div class="news-item">
                    <div class="news-title">RSI Analysis</div>
                    <div class="news-content">
                        S&P 500 RSI at 62.4, indicating healthy momentum without overbought conditions. 
                        Watch for potential pullback if RSI exceeds 70.
                    </div>
                </div>
                <div class="news-item">
                    <div class="news-title">Moving Averages</div>
                    <div class="news-content">
                        Price trading above 20-day, 50-day, and 200-day moving averages - strong bullish configuration. 
                        Golden cross pattern remains intact.
                    </div>
                </div>
                <div class="news-item">
                    <div class="news-title">Volume Profile</div>
                    <div class="news-content">
                        Above-average volume on up days suggests institutional accumulation. 
                        Look for volume confirmation on any breakout attempts.
                    </div>
                </div>
            `;

            document.getElementById('technicalAnalysis').innerHTML = analysis;
        }

        // Handle Checkout
        function handleCheckout(event) {
            event.preventDefault();
            
            const name = document.getElementById('fullName').value;
            const email = document.getElementById('email').value;

            document.getElementById('checkoutSuccess').innerHTML = `
                <div class="success-message">
                    <h3>üéâ Welcome to Market Pulse Daily!</h3>
                    <p style="margin-top: 15px; color: #cbd5e1;">Your 7-day free trial has started, ${name}!</p>
                    <p style="margin-top: 10px; color: #cbd5e1;">Check ${email} for your confirmation and account details.</p>
                    <button class="btn-primary" style="margin-top: 25px;" onclick="showPage('dashboard')">
                        Go to Dashboard
                    </button>
                </div>
            `;

            document.getElementById('checkoutForm').style.display = 'none';

            // Store subscription in localStorage
            localStorage.setItem('subscribed', 'true');
            localStorage.setItem('subscriberName', name);
            localStorage.setItem('subscriberEmail', email);
        }

        // Initialize
        updateDashboardDate();
        generateNews();
        generateForecast();
        generateTechnicalAnalysis();
    </script>
